<UserControl x:Class="Kutuphane.View.QrCodeMultipleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Extensions;assembly=Extensions" xmlns:local="clr-namespace:Kutuphane.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Kutuphane.ViewModel"
    Width="640" Height="480"
    d:DataContext="{d:DesignInstance Type=viewmodel:QrCodeMultipleViewModel}"
    d:DesignHeight="1600" d:DesignWidth="1200" UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewmodel:QrCodeMultipleViewModel />
    </UserControl.DataContext>
    <GroupBox Header="BARKODLAR">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="399.2" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <UniformGrid Columns="2">
                <extensions:NumericUpDownControl Maximum="100" Minimum="1" SmallChange="1"
                    Value="{Binding En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <extensions:NumericUpDownControl Maximum="100" Minimum="1" SmallChange="1"
                    Value="{Binding Boy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </UniformGrid>
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ItemsCtrl"
                    Width="21cm" Height="29.7cm"
                    ItemsSource="{Binding BarkodResimler}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Viewbox>
                                <Border BorderThickness="1" BorderBrush="Black">
                                    <Image Source="{Binding}" />
                                </Border>
                            </Viewbox>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding En, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Rows="{Binding Boy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
            <Button
                Grid.Row="2"
                Command="{Binding KareKodYazdır}"
                CommandParameter="{Binding ElementName=ItemsCtrl}" >
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="32" Height="32">
                            <Image.Source>
                                <MultiBinding Converter="{StaticResource SystemFileIconConverter}">
                                    <Binding Source="Shell32.dll" />
                                    <Binding Source="136" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="YAZDIR" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
    </GroupBox>
</UserControl>
