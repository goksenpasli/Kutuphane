<UserControl x:Class="Extensions.Controls.MediaViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="384" d:DesignWidth="512" UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:TimespanToSecondsConverter x:Key="TimespanToSecondsConverter" />
        <local:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <MediaElement x:Name="Player"
            Grid.Row="0"
            MinWidth="352" MinHeight="288"
            LoadedBehavior="Manual" UnloadedBehavior="Close"
            Volume="{Binding MediaVolume, UpdateSourceTrigger=PropertyChanged}" />
        <Grid Grid.Row="1" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button x:Name="Play"
                Grid.Column="0"
                Width="24" Height="24"
                Click="Play_Click" Content="4" FontFamily="Webdings" FontSize="18"
                Foreground="Blue" />
            <Button x:Name="Pause"
                Grid.Column="1"
                Width="24" Height="24"
                Click="Pause_Click" Content=";" FontFamily="Webdings" FontSize="18"
                Foreground="Blue" />
            <Button x:Name="Stop"
                Grid.Column="2"
                Width="24" Height="24"
                Click="Stop_Click" Content="&lt;" FontFamily="Webdings" FontSize="18"
                Foreground="Blue" />
            <Button x:Name="Back"
                Grid.Column="3"
                Width="24" Height="24"
                Click="Back_Click" Content="7" FontFamily="Webdings" FontSize="18"
                Foreground="Blue" />
            <Button x:Name="Forward"
                Grid.Column="4"
                Width="24" Height="24"
                Click="Forward_Click" Content="8" FontFamily="Webdings" FontSize="18"
                Foreground="Blue" />
            <Button x:Name="SlowBackward"
                Grid.Column="5"
                Width="24" Height="24"
                Click="SlowBackward_Click" Content="9" FontFamily="Webdings" FontSize="18"
                Foreground="Blue" />
            <Button x:Name="SlowForward"
                Grid.Column="6"
                Width="24" Height="24"
                Click="SlowForward_Click" Content=":" FontFamily="Webdings" FontSize="18"
                Foreground="Blue" />
            <Slider x:Name="Sld"
                Grid.Column="7"
                VerticalAlignment="Center"
                IsMoveToPointEnabled="True"
                Maximum="{Binding EndTimeSpan, Mode=OneWay, Converter={StaticResource TimespanToSecondsConverter}}"
                MouseLeave="Sld_MouseLeave" MouseMove="Sld_MouseMove"
                Style="{StaticResource Slider}"
                Thumb.DragCompleted="Sld_DragCompleted" Thumb.DragStarted="Sld_DragStarted"
                Value="{Binding MediaPosition, Converter={StaticResource TimespanToSecondsConverter}, Mode=TwoWay}" />
            <ToggleButton x:Name="Mute"
                Grid.Column="8"
                Width="24" Height="24"
                Margin="1,0,1,0"
                Checked="Mute_Checked" FontSize="18" Foreground="Blue" IsThreeState="False"
                Unchecked="Mute_Unchecked">
                <ToggleButton.Style>
                    <Style TargetType="ToggleButton">
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <TextBlock FontFamily="Webdings" Text="V" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <TextBlock FontFamily="Webdings" Text="U" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
            <Slider x:Name="Volume"
                Grid.Column="9"
                Width="60"
                VerticalAlignment="Center"
                IsMoveToPointEnabled="True" Maximum="1"
                Style="{StaticResource Slider}"
                Value="{Binding MediaVolume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Column="10"
                Margin="1,0,1,0" VerticalAlignment="Center"
                Foreground="Black">
                <Run Text="{Binding MediaPosition, Mode=OneWay, Converter={StaticResource TimeSpanToStringConverter}}" />
                <Run Text="{Binding EndTimeSpan, Mode=OneWay, Converter={StaticResource TimeSpanToStringConverter}}" />
            </TextBlock>
            <Button x:Name="Capture"
                Grid.Column="11"
                Width="24" Height="24"
                VerticalContentAlignment="Center"
                Click="Capture_Click" Content="N" FontFamily="Webdings" FontSize="20"
                Foreground="Blue" ToolTip="Ekran Yakala Resimlerim Klasörüne Kaydedilir." />
        </Grid>
    </Grid>
</UserControl>